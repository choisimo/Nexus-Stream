# Corporate Nexus Stream - Environment Variables Template
# Copy this file to .env.local for local development

# Application
NODE_ENV=development
APP_NAME="Corporate Nexus Stream"
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=nexus
DB_PASSWORD=nexus_secret
DB_NAME=nexus_stream
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis - Cache & Sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_DB=0
REDIS_TTL=3600

# Elasticsearch - Search Engine
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTIC_USERNAME=
ELASTIC_PASSWORD=
ELASTIC_INDEX_PREFIX=nexus_

# RabbitMQ - Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=nexus
RABBITMQ_PASSWORD=rabbitmq_secret
RABBITMQ_VHOST=nexus

# MinIO - Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USER=nexus
MINIO_PASSWORD=minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET=nexus-files

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@nexus-stream.com
MAIL_FROM_NAME="${APP_NAME}"

# OAuth2 Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=${APP_URL}/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=${APP_URL}/auth/github/callback

# AI Services
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_MODEL=gpt-4

# Monitoring & Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
FEATURE_AI_INSIGHTS=false
FEATURE_VIDEO_CALLS=false
FEATURE_ADVANCED_SEARCH=false
FEATURE_SOCIAL_LOGIN=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs

# Development Tools (Dev only)
ADMINER_PORT=8080
KIBANA_PORT=5601
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
RABBITMQ_MANAGEMENT_PORT=15672
MINIO_CONSOLE_PORT=9001
